{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-10 offset-1 zozo">

        <h5>{{ post.title }}</h5>

            <p>{{ post.content }}</p>

            <p class="zozo">Created_at : {{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</p>
        </div>
    </div>

    <div class="row">
        <a href="{{ path('posts_list') }}">back to list</a>
    </div>
    <div class="row">
        {% if app.user.isModerator == 1 %}
                <a href="{{ path('posts_edit', {'id': post.id}) }}" class="btn btn-success">edit</a>

                {{ include('posts/_delete_form.html.twig') }}
        {% endif %}
    </div>
</div>
{% endblock %}
