{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

<section class="register">
    <div class="container">
        <div class="row">
            <div class="col-6 offset-3">
                <h1>Register</h1>

                {{ form_start(registrationForm, { 'attr' : { 'method' : 'post'} }) }}
                        <label for="registration_form[email]">Mail</label>
                        {{ form_widget(registrationForm.email, {'attr' : { 'class' : 'form-control'} }) }}

                        <label for="registration_form[plainPassword]">Password</label>
                        {{ form_widget(registrationForm.plainPassword, {'attr' : { 'class' : 'form-control'} }) }}

                        <div class="checkbox remember-me mb-3">
                            <label for="registration_form_agreeTerms">Agree Terms</label>
                            {{ form_widget(registrationForm.agreeTerms, {'attr' : { 'class' : 'checkboxForm, checkbox'} }) }}
                        </div>
                
                        <button type="submit" class="btn btn-primary float-right">Register</button>

                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
