{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

<div class="container">
    <div class="row">
        <div class="col s9 offset-s3">
            <h1 class="title-form">Register</h1>

            {{ form_start(registrationForm, { 'attr' : { 'method' : 'post'} }) }}
            <div class="row">
                <div class="input-field col s7">
                    <label for="registration_form[email]">Mail</label>
                    {{ form_widget(registrationForm.email) }}
                </div>
            </div>
            <div class="row">
                <div class="input-field col s7">
                    <label for="registration_form[plainPassword]">Password</label>
                    {{ form_widget(registrationForm.plainPassword) }}
                </div>
            </div>
            <div class="row">
                <label for="registration_form_agreeTerms">Agree Terms</label>
                {{ form_widget(registrationForm.agreeTerms, {'attr' : { 'class' : 'checkboxForm'} }) }}
            </div>

            <div class="row">
                <div class="input-field col s7">
                    <button type="submit" class="btn right">Register</button>
                </div>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
    
{% endblock %}
