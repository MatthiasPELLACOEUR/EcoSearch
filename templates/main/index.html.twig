{% extends 'base.html.twig' %}

{% block title %}Actualities - EcoSearch{% endblock %}

{% block body %}
<div class="example-wrapper">
    {% for message in app.flashes('success') %}
        <div class="green accent-4" role="alert">{{ message }}</div>
    {% endfor %}
</div>

    <section>
      <div class="container">
        <h1>Actualities</h1>
        <div class="row row-cols-1 row-cols-md-2">
          {% for post in posts %}
            <div class="col-6 mb-4">
                <div class="card">
                  {# <img src="{{ absolute_url(asset('assets/img/contact/01.png')) }}" class="card-img-top" alt="..."> #}
                  <div class="card-body">
                      <h6 class="card-title"> {{ post.title }} </h6>
                      <p class="card-text"> {{ post.content }}... <p>
                      <a href="#">lire plus</a>
                  </div>
                </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </section>

        <!-- Contact Us Section -->
    <section id="contact" class="section">
      <!-- Container Starts -->
      <div class="container">
        <!-- Start Row -->
        <div class="row">
          <div class="col-lg-12">
            <div class="contact-text section-header "> 
              
              <div class="text-center">
                <h2 class="section-title">Contact Us</h2>
              </div>
              <div class="row">
                <div class="col-4 offset-1">
                    <div class="contact-img">
                        <img src="{{ absolute_url(asset('assets/img/contact/01.png')) }}" class="img-fluid" alt="">
                    </div>
                </div>

                <div class="col-6 offset-1">
                  <div class="feature-info">
                    <p>Vous voyez un soucis, une information fausse <br>ou vous avez une erreur. N'hésitez pas à nous contactez.</p>
                    <a class="btn btn-common zozo" id="submit" 
                    href="{{ path('contact') }}"
                    >Contactez-nous</a>
                  </div>
               </div>
              </div>
            </div>
          </div>
        </div>
        <!-- End Row -->
      </div>
        <!-- Container End -->
    </section>
{% endblock %}
